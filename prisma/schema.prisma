generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  password         String   // hashed!
  role             UserRole    @default(USER) 
  stripeCustomerId String?  // ✅ make optional
  subscriptionTier SubscriptionTier? // ✅ make optional
  isNewSubscriber  Boolean  @default(true)
  merchSent        Boolean  @default(false)
  deliveries       DeliveryLog[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

model DeliveryLog {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  shippedAt DateTime @default(now())
  items     String   // JSON or plain description of what was shipped
}

enum SubscriptionTier {
  LIKE
  LOVE
  NEED
  CLASHOHOLIC
}

model Plan {
  id              Int      @id @default(autoincrement())
  stripeProductId String   // Ensure this field exists in the schema
  stripePriceId   String
  title           String
  description     String
  priceCents      Int
  currency        String
  features        String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  address         String?
}




